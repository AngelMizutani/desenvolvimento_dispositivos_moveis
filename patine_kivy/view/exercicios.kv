<TelaExercicios>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Exercicios'
                ActionButton:
                    text: 'Add'
                    on_release: app.root.current = 'form'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height

<Exercicio>:
    size_hint_y: None
    height:200
    Label:
        id: label_nome
        font_size: 30
    Label:
        id: label_descricao
        font_size: 20
